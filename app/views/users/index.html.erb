<div class="container mt-3">
  <div class="row">
  <div class="col-md-3"><%= render 'books/list', books: @books, user: current_user %>
  </div>
  
  <div class="col-md-8 offset-md-1">
<h1>Users</h1>

<table class="table">
  <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  
  <tbody>
<% @users.each do |user| %>
<tr>
 <td><%= image_tag user.get_profile_image(100,100) %></td>
 <td><%= user.name %></td>
 <td><%= link_to 'Show',user_path(user.id) %></td>
  
<% end %>
</tbody>
</table>
</div>
</div>
</div>